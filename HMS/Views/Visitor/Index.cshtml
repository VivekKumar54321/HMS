@model IEnumerable<HMS.Models.Visitor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Visitor Name
            </th>
            <th>
                Visitor Address
            </th>
            <th>
               Visitor PhoneNo
            </th>
            <th>
                Visitor Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VisitorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitorAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitorPhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitorEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VisitorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VisitorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VisitorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
