@model HMS.Models.Billing

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Billing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="BillingId" />
			<div class="form-group">
				<label asp-for="BillingType" class="control-label"></label>
				<input asp-for="BillingType" class="form-control" />
				<span asp-validation-for="BillingType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BillingDate" class="control-label"></label>
				<input asp-for="BillingDate" class="form-control" />
				<span asp-validation-for="BillingDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BillingAmount" class="control-label"></label>
				<input asp-for="BillingAmount" class="form-control" />
				<span asp-validation-for="BillingAmount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="VisitorId" class="control-label"></label>
				<select asp-for="VisitorId" class="form-control" asp-items="ViewBag.Visitor"></select>
				<span asp-validation-for="VisitorId" class="text-danger"></span>
			</div>
		

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
